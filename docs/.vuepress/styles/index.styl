.double-pane
  padding: 1em
  border: 1px solid #cecece
  border-radius: 6px

  @media (min-width: 480px)
    display: flex
    border: 0
    padding: 0

  .pane
    display: block
    width: 100%
    margin-bottom: 1em
    box-sizing: border-box

    @media (min-width: 480px)
      width: 50%
      flex: 0 0 50%
      padding-right: 1em
      margin: 2em 0

.code
  font-size: 14px
  background-color: #282c34
  border-radius: 6px
  font-family: source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace
  color: #e2777a
  padding: 1em
  white-space: pre

.formulate-input-dropdown
  background-color: white
  margin: -3px 0 0 0
  padding: 0
  list-style-type: none
